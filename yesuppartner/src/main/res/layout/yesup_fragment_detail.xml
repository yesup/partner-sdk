<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFDCDCDC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FF4044AF">
    </LinearLayout>
    <ScrollView
        android:id="@+id/DetailScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <!-- content title -->
            <RelativeLayout
                android:id="@+id/LayoutContentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF4044AF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp">
                    <TextView
                        android:id="@+id/DetailTitle"
                        android:text="App Name"
                        android:layout_toRightOf="@+id/LayoutDetailIcon"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_marginRight="110dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/DetailRemark"
                        android:text="Description"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_marginRight="110dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/DetailPlatform"
                        android:text="SYSTEM"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_marginRight="110dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/DetailFree"
                        android:text="FREE"
                        android:textColor="#ff0000"
                        android:layout_width="match_parent"
                        android:layout_marginRight="110dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LayoutDetailIcon"
                    android:layout_alignParentRight="true"
                    android:layout_width="110dp"
                    android:layout_height="110dp">
                    <ImageView
                        android:id="@+id/DetailAppIcon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/yesup_placeholder" />
                </LinearLayout>
            </RelativeLayout>

            <!-- middle information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yesup_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/yesup_detail_icon"/>
                    <TextView
                        android:text="Detail"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp" />
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/EditDetailDesc"
                    android:text="This is an ...\r\nDescription"
                    android:textSize="12sp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:editable="false"
                    android:gravity="top" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@drawable/yesup_line2" />
            </LinearLayout>

            <!-- bottom information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yesup_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/yesup_terms_icon"/>
                    <TextView
                        android:text="Terms and Conditions"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/EditDetailTerms"
                    android:text="install"
                    android:textSize="12sp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="10dp"
                    android:gravity="top"
                    android:background="@null"
                    android:editable="false" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>